<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ServletDemo</servlet-name>
        <servlet-class>ServletDemo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Area_Circle</servlet-name>
        <servlet-class>Area_Circle</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LifeCycle</servlet-name>
        <servlet-class>LifeCycle</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletContext_One</servlet-name>
        <servlet-class>ServletContext_One</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletContext_Two</servlet-name>
        <servlet-class>ServletContext_Two</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletContext_Web_Demo</servlet-name>
        <servlet-class>ServletContext_Web_Demo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>wel</servlet-name>
        <servlet-class>wel</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletDemo</servlet-name>
        <url-pattern>/ServletDemo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Area_Circle</servlet-name>
        <url-pattern>/Area_Circle</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LifeCycle</servlet-name>
        <url-pattern>/LifeCycle</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletContext_One</servlet-name>
        <url-pattern>/ServletContext_One</url-pattern>
    </servlet-mapping>
    <context-param>
        <param-name>USERNAME</param-name>
        <param-value>ADMIN</param-value>
    </context-param>
    <servlet-mapping>
        <servlet-name>ServletContext_Two</servlet-name>
        <url-pattern>/ServletContext_Two</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletContext_Web_Demo</servlet-name>
        <url-pattern>/ServletContext_Web_Demo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>wel</servlet-name>
        <url-pattern>/wel</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>FilterDemo</filter-name>
        <filter-class>FilterDemo</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>FilterDemo</filter-name>
        <url-pattern>/login</url-pattern>
    </filter-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
